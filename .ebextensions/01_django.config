option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "src.Clean-Energy-PA-Site.Website.settings"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    WSGIPath: "src.Clean-Energy-PA-Site.Website.wsgi:application"

container_commands:
  01_debug:
    command: "ls"
    leader_only: true
  02_makemigrations:
    command: "source /var/app/venv/*/bin/activate && cd src/Clean-Energy-PA-Site/ && python3 manage.py makemigrations --noinput"
    leader_only: true
  03_migrate:
    command: "source /var/app/venv/*/bin/activate && cd src/Clean-Energy-PA-Site/ && python3 manage.py migrate --noinput"
    leader_only: true